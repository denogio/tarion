{
   "$schema": "https://vicinae.com/schemas/config.json",
   "close_on_focus_loss": true,
   "font": {
      "normal": {
         "family": "0xProto Nerd Font Mono",
         "size": 10
      }
   },
   "theme": {
      "dark": {
         "name": "catppuccin-mocha"
      }
   },
   "launcher_window": {
      "opacity": 0.8,
      "client_side_decorations": {
         "enabled": true
      }
   },
   "providers": {
      "@uetchy/store.raycast.nextcloud": {
         "preferences": {
            "hostname": "https://next.hojgaard.me",
            "username": "hojgaard"
         }
      },
      "applications": {
         "preferences": {
            "paths": [
               "/home/dehoej/.local/share/applications",
               "/var/lib/flatpak/exports/share/applications",
               "/usr/local/share/applications",
               "/usr/share/applications"
            ]
         }
      },
      "power": {
         "entrypoints": {
            "reboot": {
               "preferences": {
                  "confirm": false
               }
            }
         }
      },
      "raycast-compat": {
         "entrypoints": {
            "store": {
               "preferences": {
                  "alwaysShowIntro": true
               }
            }
         }
      }
   }
}