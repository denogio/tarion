#!/usr/bin/env bash
# @vicinae.schemaVersion 1
# @vicinae.title System Controls
# @vicinae.mode dmenu

set -euo pipefail

# Check if gum is available
if ! command -v gum &> /dev/null; then
    echo "gum is required for interactive mode. Please install it first."
    exit 1
fi

# Show system controls menu using Vicinae dmenu mode
cat << 'EOF' | vicinae dmenu --placeholder "Select system control..."
â» Power Off
ðŸ”„ Reboot
ðŸ”’ Lock Screen
