#!/bin/bash

if [[ -z $1 ]]; then
  echo "Usage: tairon-theme-set <theme-name>"
  exit 1
fi

CURRENT_THEME_PATH="$HOME/.config/tairon/current/theme"
NEXT_THEME_PATH="$HOME/.config/tairon/current/next-theme"
USER_THEMES_PATH="$HOME/.config/tairon/themes"
SYSTEM_THEMES_PATH="/usr/share/tairon/themes"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')

if [[ -d "$USER_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$USER_THEMES_PATH/$THEME_NAME"
elif [[ -d "$SYSTEM_THEMES_PATH/$THEME_NAME" ]]; then
  THEME_PATH="$SYSTEM_THEMES_PATH/$THEME_NAME"
else
  echo "Theme '$THEME_NAME' does not exist"
  exit 1
fi

# Setup clean next theme directory (for atomic theme config swapping)
rm -rf "$NEXT_THEME_PATH"
mkdir -p "$NEXT_THEME_PATH"

# Copy static configs
cp -r "$THEME_PATH/"* "$NEXT_THEME_PATH/" 2>/dev/null

# Generate dynamic configs
# tairon-theme-set-templates # TODO: Enable when ported

# Swap next theme in as current
rm -rf "$CURRENT_THEME_PATH"
mv "$NEXT_THEME_PATH" "$CURRENT_THEME_PATH"

# Store theme name for reference
echo "$THEME_NAME" > "$HOME/.config/tairon/current/theme.name"

# Change background with theme
# tairon-theme-bg-next # TODO: Enable when ported

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  # tairon-restart-waybar
  systemctl --user restart waybar
fi

# tairon-restart-swayosd
# tairon-restart-terminal
# tairon-restart-hyprctl
# tairon-restart-btop
# tairon-restart-opencode
# tairon-restart-mako

# Change app-specific themes
if command -v tairon-theme-set-gnome &>/dev/null; then
    tairon-theme-set-gnome
fi
if command -v tairon-theme-set-browser &>/dev/null; then
    tairon-theme-set-browser
fi
if command -v tairon-theme-set-vscode &>/dev/null; then
    tairon-theme-set-vscode
fi
if command -v tairon-theme-set-obsidian &>/dev/null; then
    tairon-theme-set-obsidian
fi

# Call hook on theme set
# tairon-hook theme-set "$THEME_NAME"
